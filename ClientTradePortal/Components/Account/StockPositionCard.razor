@using ClientTradePortal.Models.DTO

<h3>Stock Position</h3>

@if (Position is null)
{
    <p>No position data.</p>
}
else
{
    <div>
        <div><strong>Symbol:</strong> @Position.Symbol</div>
        <div><strong>Quantity:</strong> @Position.Quantity</div>
        <div><strong>Average Price:</strong> @Position.AveragePrice</div>
        <div><strong>Current Price:</strong> @Position.CurrentPrice</div>
    </div>
}

@code {
    [Parameter, EditorRequired]
    public StockPositionResponse? Position { get; set; }
}
